{
  "compilerOptions": {
    "target": "es5",
    "strict": false,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": "src",
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "exclude": [
    "node_modules"
  ],
  "include" : ["src"]
}